<script type="text/javascript">
  jsPlumb.bind('ready',function(){
    jsPlumb.bind("jsPlumbConnection", function(e) {
      var source_id = e.connection.sourceId.split('_')[1];
      var target_id = e.connection.targetId.split('_')[1];
      $.ajax({
        type: "POST",
        url: "/minds/" + source_id + "/connect/" + target_id
      });
    });
    jsPlumb.bind("jsPlumbConnectionDetached", function(e) {
      var source_id = e.connection.sourceId.split('_')[1];
      var target_id = e.connection.targetId.split('_')[1];
      $.ajax({
        type: "POST",
        url: "/minds/" + source_id + "/disconnect/" + target_id
      });
    });
  });
</script>
